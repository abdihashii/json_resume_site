---
import resume from '../data/resume.json';

const {
	basics: { summary },
	interests,
} = resume;
---

<section
	id="about"
	class="min-h-screen p-12 border border-[#dee2e6] flex justify-center items-center"
>
	<div class="2xl:w-2/3 w-full">
		<h1 class="mb-2">Abdirahman <span class="text-[#594157]">Haji</span></h1>

		<div class="space-y-12">
			<div
				class="uppercase font-medium text-[1.35rem]"
				style="font-family: 'Saira Extra Condensed', serif;"
			>
				<a href="mailto:abdirahman.haji.13@gmail.com">
					abdirahman.haji.13@gmail.com
				</a>
			</div>

			<div class="space-y-3">
				<h2 class="text-[1.75rem]">About Me</h2>
				<p class="text-gray-500">{summary}</p>
			</div>

			<div class="space-y-3">
				<h2 class="text-[1.75rem]">Interests</h2>
				{
					interests.map((interest) => (
						<p class="text-gray-500 mb-5 last:mb-0">{interest}</p>
					))
				}
			</div>
		</div>
	</div>
</section>
